<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".BillSettlement">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="#00ccff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="CaÅ‚kowity koszt wyjazdu" />

    <TextView
        android:id="@+id/activity_bill_settlement_totalCostTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowDx="1"
        android:shadowColor="#00ccff"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Koszt wyjazdu na osobe" />

    <TextView
        android:id="@+id/activity_bill_settlement_costPerUserTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:text="TextView" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dla mnie"
        android:shadowDx="1"
        android:shadowColor="#00ccff"
        android:shadowDy="1"
        android:layout_marginLeft="10sp"
        android:shadowRadius="2"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/activity_bill_settlement_settlementDetailsGetLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    </ListView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do oddania"

        android:textSize="20sp" />

    <ListView
        android:id="@+id/activity_bill_settlement_settlementDetailsGiveLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>